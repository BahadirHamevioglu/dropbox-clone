---
import { Sprite } from "astro-icon";

export interface Props {
  title: string;
  subtitle: string;
  buttonText: string;
  icon: string;
  image: string;
}

const { title, subtitle, buttonText, icon, image } = Astro.props;
---

<div class="tutorial">
  <div class="image-container">
    <img src={image} alt="illustration" />
  </div>
  <div class="text-container">
    <div class="title">{title}</div>
    <div class="subtitle">
      {subtitle}
    </div>
    <a href="#">
      <div>{buttonText}</div>
      <div>
        <Sprite name={icon} />
      </div>
    </a>
  </div>
</div>

<style lang="scss">
  .tutorial {
    display: flex;
    flex-direction: column;

    .image-container {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      img {
        width: 100%;
        height: 100%;
      }
    }
    .text-container {
      background-color: #fff;
      display: flex;
      flex-direction: column;
      padding: 1rem;
    }
    .title {
      font-weight: 400;
      font-size: 32px;
      line-height: 41px;
      margin-top: 0.5rem;
      margin-bottom: 1rem;
      color: #1e1919;
    }
    .subtitle {
      font-weight: 400;
      font-size: 16px;
      line-height: 20px;
      color: #1e1919;
      margin-bottom: 52px;
    }
    a {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #0061fe;
      padding: 2rem 1rem;
      color: #f7f5f2;

      &:hover {
        background-color: #0050e0;
      }
    }
  }

  [astro-icon="arrow-right"] {
    width: 25px;
    height: 25px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #f7f5f2;
  }
</style>
