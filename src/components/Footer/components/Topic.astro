---
export interface Props {
  title: string;
  arrayName: Array<{ title: string; link: string }>;
}

const { title, arrayName } = Astro.props;
---

<div class="list">
  <ul>
    <div class="title">{title}</div>
    {
      arrayName.map((item) => (
        <>
          <li>
            <a href={item.link}> {item.title} </a>
          </li>
        </>
      ))
    }
  </ul>
</div>

<style lang="scss">
  .list {
    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      li {
        margin-bottom: 16px;
        a {
          font-weight: 400;
          font-size: 14px;
          line-height: 17px;
          color: #f7f5f2;
          &:hover {
            text-decoration: underline;
          }
        }
      }
      .title {
        font-weight: 400;
        font-size: 20px;
        line-height: 25px;
        margin-bottom: 27px;
      }
    }
  }
</style>
