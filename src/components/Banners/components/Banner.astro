---
import { Sprite } from "astro-icon";

export interface Props {
  icon: string;
  title: string;
  mainText: string;
  subText: string;
  buttonUrl: string;
  bannerColor: string;
}

const { icon, title, mainText, subText, buttonUrl, image } = Astro.props;
const bannerColor1 = "#14C8EB";
const bannerColor2 = "rgb(238 223 241)";
---

<div class="banner">
  <div class="banner_content container">
    <div class="banner_title">
      <div class="icon">
        <Sprite name={icon} />
      </div>
      <div class="title">{title}</div>
    </div>
    <div class="banner-main-text">{mainText}</div>
    <div class="banner-sub-text">
      {subText}
    </div>
    <div class="banner-buttons">
      <a href={buttonUrl}>Learn more</a>
      <a href={buttonUrl}>Try for free</a>
    </div>
    <div class="image-container">
      <img src={image} />
    </div>
  </div>
</div>

<style
  lang="scss"
  define:vars={{ bannerColor1: bannerColor1, bannerColor2: bannerColor2 }}
>
  .banner {
    background: var(--bannerColor1);
    .banner_content {
      max-width: 446px;
      margin: 0 auto;
      padding: 2rem 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      .banner_title {
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        .icon {
          margin-right: 0.5rem;
        }
        .title {
          font-weight: 400;
          font-size: 16px;
          line-height: 20px;
          color: #1e1919;
        }
      }
      .banner-main-text {
        display: flex;
        text-align: center;
        font-weight: 400;
        font-size: 32px;
        line-height: 38px;
        color: #1e1919;
        margin-bottom: 1.5rem;
      }
      .banner-sub-text {
        display: flex;
        text-align: center;
        font-weight: 400;
        font-size: 16px;
        line-height: 20px;
        color: #1e1919;
        margin-bottom: 1.5rem;
      }
      .banner-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
        a {
          display: flex;
          justify-content: center;
          align-items: center;
          width: 120px;
          height: 40px;
          border-radius: 4px;
          font-weight: 400;
          font-size: 16px;
          line-height: 24px;
          color: #1e1919;
          margin-right: 1rem;
          margin-bottom: 2.5rem;
          &:last-child {
            margin-right: 0;
          }
        }
      }
      .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        text-align: center;
        margin: 0 auto;
        max-width: 1200px;
        width: 100%;
        height: 100%;
        margin-bottom: 2rem;

        img {
          width: 100%;
          height: 100%;
        }
      }
    }
  }

  [astro-icon] {
    width: 25px;
    height: 25px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #1e1919;
  }
</style>
